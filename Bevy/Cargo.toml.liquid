[package]
name = "{{project-name}}"
version = "0.1.0"
edition = "2024"
authors = ["{{ authors }}"]

[features]
default = []

[dependencies]
bevy = { version = "0.15.1", features = ["dynamic_linking"] }

{%- if within_cargo_project==false %}

[profile.dev]
opt-level = 1
incremental = true
codegen-backend = "cranelift"

[profile.dev.package."*"]
opt-level = 3
codegen-backend = "llvm"


[profile.release]
lto = "thin"

{%- endif %}
